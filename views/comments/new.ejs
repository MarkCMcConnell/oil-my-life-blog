<% include ../partials/header %>
  <% include ../partials/top-section %>

    <div class="row row--gutters-medium">
      <div class="row__medium-8">
        <div class="new-post-form">
          <div class="new-post-form">
            <h1>Comment on <%= post.title %></h1>

            <form class="new-post-form__form" action="/posts/<%= post._id %>/comments" method="POST">
              <div class="new-post-form__input" >
                <input class="new-post-form__input-field" type="text" name="comment[author]" placeholder="Your name" />
              </div>
              <div class="new-post-form__input">
                <textarea class="new-post-form__input-field" name="comment[text]" placeholder="Enter your comment here"></textarea>
              </div>
              <button class="button button--b-radius">Submit</button>
            </form>
            <a href="/posts"><button class="button button--b-radius">Go Back</button></a>
          </div>
        </div>
      </div>
      <% include ../partials/sidebar %>
    </div>
  </div>

<% include ../partials/footer %>
