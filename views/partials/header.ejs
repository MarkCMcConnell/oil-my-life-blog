    <header class="site-header">
      <% if(error && error.length > 0) { %>
          <div class="flash-message flash-message--error" role="alert">
            <%= error %>
          </div>
      <% } %>
      <% if(success && success.length > 0) { %>
        <div class="flash-message flash-message--success">
          <%= success %>
        </div>
      <% } %>
      <div class="site-header__top-wrapper">
        <h1 class="site-header__title">Oil My Life</h1>
        <div class="site-header__menu-icon site-header__menu-icon--show-at-medium">
          <div class="site-header__menu-icon__middle"></div>
        </div>
      </div>
      <div id="menu-content" class="site-header__menu-content">
        <nav class="primary-nav">
          <ul class="primary-nav__list">
            <li class="primary-nav__list-item"><a class="primary-nav__link" href="/">Home</a></li>
            <li class="primary-nav__list-item"><a class="primary-nav__link" href="/blog/posts">Blog</a></li>
            <li class="primary-nav__list-item"><a class="primary-nav__link" href="/blog/about">About Me</a></li>
            <%# <li class="primary-nav__list-item"><a href="/">Oil My Life</a></li>%>
            <% if(!currentUser) { %>
              <li class="primary-nav__list-item"><a class="primary-nav__link" href="/login">Login</a></li>
              <li class="primary-nav__list-item"><a class="primary-nav__link" href="/register">Register</a></li>
            <% } else { %>
              <li class="primary-nav__list-item"><a class="primary-nav__link" href="/logout">Logout</a></li>
              <li class="primary-nav__list-item primary-nav__list-item--white">Signed In As <%= currentUser.username %></li>
              <% if(currentUser.role === 'admin') { %>
                <li class="primary-nav__list-item"><a class="primary-nav__link" href="/blog/posts/new">New Post</a></li>
              <% } %>
            <% } %>
          </ul>
        </nav>
