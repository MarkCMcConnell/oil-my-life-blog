<% include partials/header %>

    <%# Most recent blog in hero format %>
    <div class="wrapper wrapper--p-top">
      <div class="blog-post">
        <img class="blog-post__image" src="<%= post.image %>" />
        <div class="blog-post__text">
          <h1 class="blog-post__text__title"><%= post.title %></h1>
        </div>
      </div>

      <div class="row row--gutters-medium">
        <div class="row__medium-8">
          <%# Post goes here %>
          <p><%- post.body %></p>

        </div>
        <div class="row__medium-4">
          <%# Second column for archoved posts and tags %>
          <div class="sidebar">
            <h3 class="sidebar__subtitle">Archives</h3>
            <p class="sidebar__link">This month</a>
            <p class="sidebar__link">Last month</a>
            <p class="sidebar__link">Last Last month</a>
            <p class="sidebar__link">Older</a>
            <h3 class="sidebar__subtitle sidebar__subtitle--t-margin">Tags</h3>
            <%# Example tags%>
            <p class="sidebar__link">Recipes</a>
            <p class="sidebar__link">Essential Oils</a>
            <p class="sidebar__link">Mental Health</a>
            <p class="sidebar__link">Parenting</a>
            <%# Full width divider with a link to the parent app %>
          </div>
        </div>
      </div>
    </div>

<% include partials/bottom-section %>
